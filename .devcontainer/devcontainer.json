{
    "name": "Quarkdown Dev",
    "image": "mcr.microsoft.com/devcontainers/java:1-17-bookworm",
    // 修正箇所: bash に引数としてバージョンタグを渡す (-s v1.13.0)
   "postCreateCommand": "curl -fsSL https://raw.githubusercontent.com/quarkdown-labs/get-quarkdown/refs/heads/main/install.sh | sudo env \"PATH=$PATH\" bash",
    "customizations": {
        "vscode": {
            "extensions": [
                "quarkdown.quarkdown-vscode",
                "GitHub.copilot"
            ]
        }
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly,type=bind,consistency=cached"
    ]
}